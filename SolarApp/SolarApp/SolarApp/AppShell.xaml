    <!-- 
        Styles and Resources 
    -->

    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <StackLayout BackgroundColor="Black" Padding="15">
                <Image Source="user_icon" Aspect="AspectFit"/>
                <Label TextColor="White" FontSize="Medium" HorizontalOptions="Center" Text="Olmer Garcia"/>
            </StackLayout>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>

    <!--Home-->
    <FlyoutItem Title="Home" Icon="home_icon.png" FlyoutDisplayOptions="AsMultipleItems">>
        <Tab>
            <ShellContent>
                <views:Home/>
            </ShellContent>
        </Tab>
        <Tab>
            <ShellContent>
                <views:Description/>
            </ShellContent>
        </Tab>
    </FlyoutItem>
    <!--Measure-->
    <FlyoutItem Title="Caracterizar" Icon="gauge_icon.png" FlyoutDisplayOptions="AsMultipleItems">>
        <Tab>
            <ShellContent>
                <views:Measure/>
            </ShellContent>
        </Tab>
    </FlyoutItem>
    <!--Results-->
    <FlyoutItem Title="Resultados" Icon="curve_icon.png">
        <Tab>
            <ShellContent>
                <views:Curves/>
            </ShellContent>
        </Tab>
        <Tab>
            <ShellContent>
                <views:SpreadSheet/>
            </ShellContent>
        </Tab>
        <Tab>
            <ShellContent>
                <views:Panels/>
            </ShellContent>
        </Tab>
    </FlyoutItem>
    <!--Size system-->
    <FlyoutItem Title="Dimensionar Sistema" Icon="export_icon.png" FlyoutDisplayOptions="AsMultipleItems">>
        <Tab>
            <ShellContent>
                <views:SizingSystem/>
            </ShellContent>
        </Tab>
    </FlyoutItem>
    
    <!--About-->
</Shell>
